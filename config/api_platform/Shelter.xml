<?xml version="1.0" encoding="UTF-8" ?>

<resources xmlns="https://api-platform.com/schema/metadata"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="https://api-platform.com/schema/metadata
        https://api-platform.com/schema/metadata/metadata-2.0.xsd">
    <resource class="App\Domain\Shelter\Shelter">
        <collectionOperations>
            <collectionOperation name="admin_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/admin/shelters</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">admin:shelter:read</attribute>
                </attribute>
            </collectionOperation>

            <collectionOperation name="admin_post">
                <attribute name="method">POST</attribute>
                <attribute name="path">/admin/shelters</attribute>
                <attribute name="messenger">input</attribute>
                <attribute name="input">App\Application\Command\CreateShelter</attribute>
                <attribute name="output">App\Application\CommandResult\CreateShelterResult</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">
                        <attribute>admin:shelter:create</attribute>
                        <attribute>admin:address:create</attribute>
                    </attribute>
                </attribute>
            </collectionOperation>

            <collectionOperation name="front_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/front/shelters</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">front:shelter:read</attribute>
                </attribute>
            </collectionOperation>

            <collectionOperation name="front_post">
                <attribute name="method">POST</attribute>
                <attribute name="path">/front/shelters</attribute>
                <attribute name="messenger">input</attribute>
                <attribute name="input">App\Application\Command\CreateShelter</attribute>
                <attribute name="output">App\Application\CommandResult\CreateShelterResult</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">
                        <attribute>admin:shelter:create</attribute>
                        <attribute>admin:address:create</attribute>
                    </attribute>
                </attribute>
            </collectionOperation>
        </collectionOperations>

        <itemOperations>
            <itemOperation name="admin_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/admin/shelters/{id}</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">admin:shelter:read</attribute>
                </attribute>
            </itemOperation>

            <itemOperation name="admin_put">
                <attribute name="method">PUT</attribute>
                <attribute name="path">/admin/shelters/{id}</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">admin:shelter:update</attribute>
                </attribute>
            </itemOperation>

            <itemOperation name="admin_patch">
                <attribute name="method">PATCH</attribute>
                <attribute name="path">/admin/shelters/{id}</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">admin:shelter:update</attribute>
                </attribute>
            </itemOperation>

            <itemOperation name="admin_delete">
                <attribute name="method">DELETE</attribute>
                <attribute name="path">/admin/shelters/{id}</attribute>
            </itemOperation>

            <itemOperation name="front_get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/front/shelters/{id}</attribute>
                <attribute name="denormalization_context">
                    <attribute name="groups">front:shelter:read</attribute>
                </attribute>
            </itemOperation>
        </itemOperations>
    </resource>
</resources>
